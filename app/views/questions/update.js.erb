<% if @question.links.any?(&:gist?) %>
  window.location.reload(false); // иначе не подгружается вставляемый в партиале answer script
<% else %>
  <% if @question.errors.blank? %>
    $('#question-<%= @question.id %>').html('<%= j render @question %>');
  <% else %>
    $('#question-errors').html('<%= render 'shared/errors', resource: @question %>');
  <% end %>
<% end %>
