<% if @answer.links.any?(&:gist?) %>
  window.location.reload(false); // иначе не подгружается вставляемый в партиале answer script
<% else %>
  $('#new-answer-errors').html('<%= render 'shared/short_errors', resource: @answer %>');

  <% if @answer.persisted? %>
    $('.answers').append('<%= j render @answer %>');
    $('#new-answer #answer_body').val('');
  <% end %>
<% end %>
